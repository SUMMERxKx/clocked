{
  "name": "@clocked/server",
  "version": "1.0.0",
  "description": "Clocked server API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
