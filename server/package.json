    "@fastify/websocket": "^8.3.1",
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "fastify": "^4.24.3",
    "ioredis": "^5.3.2",
    "nodemailer": "^6.9.7",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "socket.io": "^4.7.4",
    "zod": "^3.22.4"
